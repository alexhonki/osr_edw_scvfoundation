<core:FragmentDefinition xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
                         xmlns:core="sap.ui.core"
                         xmlns:f="sap.ui.layout.form"
                         xmlns:l="sap.ui.layout"
                         xmlns:mvc="sap.ui.core.mvc"
                         xmlns:t="sap.ui.table"
                         xmlns="sap.m">

  <Toolbar design="Transparent"
           ariaLabelledBy="headerToolbar"
           class="osrSCVToolBar">
    <Title level="H3"
           text="{i18n>headercontent.person} {viewModel>/STD_PERSON_FN} {viewModel>/STD_PERSON_GN} {viewModel>/STD_PERSON_GN2}" />
    <ToolbarSpacer/>
    <Title level="H3"
           text="{i18n>headercontent.scvid} {viewModel>/SCV_ID}" />
  </Toolbar>

  <Title level="H3"
         text="Known By Other Names"
         class="sapUiSmallMargin" />
			<t:Table
				id="person-table"
				selectionMode="None"
				rows="{scvExplorerModel}"
				visibleRowCount="10"
				sort=""
				enableCellFilter="true"
				enableSelectAll="false"
				enableBusyIndicator="true"
				ariaLabelledBy="title">

				<t:columns>
					<t:Column
						sortProperty="SOURCE"
						autoResizable="true"
						filterProperty="SOURCE">
						<Label text="Source" />
						<t:template>
							<Text text="{scvExplorerModel>SOURCE}" wrapping="false" />
						</t:template>
					</t:Column>
					
					<t:Column
						sortProperty="STD_PERSON_FN"
						autoResizable="true"
						filterProperty="STD_PERSON_FN" >
						<Label text="First Name" />
						<t:template>
							<Text text="{scvExplorerModel>STD_PERSON_FN}" wrapping="false" />
						</t:template>
					</t:Column>
					
					<t:Column
						sortProperty="STD_PERSON_GN"
						autoResizable="true"
						filterProperty="STD_PERSON_GN">
						<Label text="Middle Name" />
						<t:template>
							<Text text="{scvExplorerModel>STD_PERSON_GN}" wrapping="false" />
						</t:template>
					</t:Column>
					
					<t:Column
						sortProperty="STD_PERSON_GN2"
						autoResizable="true"
						filterProperty="STD_PERSON_GN2">
						<Label text="Last Name" />
						<t:template>
							<Text text="{scvExplorerModel>STD_PERSON_GN2}" wrapping="false" />
						</t:template>
					</t:Column>
					
					<t:Column
						sortProperty="VALID_FROM"
						autoResizable="true"
						filterProperty="VALID_FROM">
						<Label text="Valid From" />
						<t:template>
							<Text text="{scvExplorerModel>VALID_FROM}" wrapping="false" />
						</t:template>
					</t:Column>
					
					<t:Column
						sortProperty="VALID_TO"
						autoResizable="true"
						filterProperty="VALID_TO">
						<Label text="Valid To" />
						<t:template>
							<Text text="{scvExplorerModel>VALID_TO}" wrapping="false" />
						</t:template>
					</t:Column>
					
				</t:columns>
				
			</t:Table>


</core:FragmentDefinition>
