<core:FragmentDefinition xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
                         xmlns:core="sap.ui.core"
                         xmlns:f="sap.ui.layout.form"
                         xmlns:l="sap.ui.layout"
                         xmlns:mvc="sap.ui.core.mvc"
                         xmlns:smartTable="sap.ui.comp.smarttable"
                         xmlns="sap.m">

  <Toolbar design="Transparent"
           ariaLabelledBy="headerToolbar"
           class="osrSCVToolBar">
    <Title level="H3"
           text="{i18n>headercontent.current} {viewModel>/STD_PERSON_FN} {viewModel>/STD_PERSON_GN} {viewModel>/STD_PERSON_GN2}" />
    <ToolbarSpacer/>
    <Title level="H3"
           text="{i18n>headercontent.scvid} {viewModel>/SCV_ID}" />
  </Toolbar>

  <f:SimpleForm id="form-display-contact"
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="3"
                columnsL="3"
                columnsM="3"
                singleContainerFullSize="true"
                backgroundDesign="Solid">
    <f:content>
      <core:Title text="Name" />
      <Label text="First Name" />
      <Text text="{personModel>/STD_PERSON_GN}" />
      <Label text="Middle Name" />
      <Text text="{personModel>/STD_PERSON_GN2}" />
      <Label text="Last Name" />
      <Text text="{personModel>/STD_PERSON_FN}" />


      <core:Title text="Identification" />
      <Label text="Date of Birth" />
      <Text text="{personModel>/BIRTH_DATE}" />

      <Label text="Driver License" />
      <Text text="{personModel>/DRIVER_LICENSE}" />

      <Label text="RMS BP Number" />
      <Text text="{personModel>/BP_NUMBER}" />


      <core:Title text="Contact" />
      <Label text="Mobile Number" />
      <Text text="{personModel>/MOBILE_NUMBER}" />

      <Label text="Home Number" />
      <Text text="{personModel>/HOME_NUMBER}" />

      <Label text="Email" />
      <Text text="{personModel>/CONTACT_EMAIL}" />

    </f:content>
  </f:SimpleForm>

  <Title level="H3"
         text="Addresses"
         class="sapUiSmallMargin" />
  <smartTable:SmartTable id="LineItemsSmartTable"
                         entitySet=""
                         smartFilterId="smartFilterBar"
                         tableType="ResponsiveTable"
                         useExportToExcel="true"
                         beforeExport="onBeforeExport"
                         useVariantManagement="false"
                         useTablePersonalisation="true"
                         header="Line Items"
                         showRowCount="true"
                         persistencyKey="SmartTableAnalytical_Explored"
                         enableAutoBinding="true"
                         app:useSmartField="true"
                         class="sapUiResponsiveContentPadding">
    <!-- layout data used to make the table growing but the filter bar fixed -->
    <smartTable:layoutData>
      <FlexItemData growFactor="1"
                    baseSize="0%" />
    </smartTable:layoutData>
  </smartTable:SmartTable>


</core:FragmentDefinition>
