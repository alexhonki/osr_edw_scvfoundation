<core:FragmentDefinition xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
                         xmlns:core="sap.ui.core"
                         xmlns:f="sap.ui.layout.form"
                         xmlns:l="sap.ui.layout"
                         xmlns:mvc="sap.ui.core.mvc"
                         xmlns:t="sap.ui.table"
                         xmlns="sap.m">

  <Toolbar design="Transparent"
           ariaLabelledBy="headerToolbar"
           class="osrSCVToolBar">
    <Title level="H3"
           text="{i18n>headercontent.contact} {viewModel>/STD_PERSON_FN} {viewModel>/STD_PERSON_GN} {viewModel>/STD_PERSON_GN2}" />
    <ToolbarSpacer/>
    <Title level="H3"
           text="{i18n>headercontent.scvid} {viewModel>/SCV_ID}" />
  </Toolbar>


  <Title level="H3"
         text="Other Known Contact Details:"
         class="sapUiSmallMargin" />

			<t:Table
				id="contact-history-table"
				selectionMode="None"
				rows="{scvExplorerModel}"
				visibleRowCount="10"
				sort=""
				enableCellFilter="true"
				enableSelectAll="false"
				enableBusyIndicator="true"
				ariaLabelledBy="title">
				<!--<toolbar>-->
				<!--	<Toolbar>-->
				<!--		<ToolbarSpacer/>-->
				<!--		<Button-->
				<!--			icon="sap-icon://decline"-->
				<!--			tooltip="Clear all filters"-->
				<!--			press="clearAllFilters"/>-->
				<!--		<ToolbarSeparator/>-->
				<!--		<SearchField-->
				<!--			placeholder="Filter"-->
				<!--			value="{ui>/globalFilter}"-->
				<!--			search="filterGlobally"-->
				<!--			width="15rem"/>-->
				<!--	</Toolbar>-->
				<!--</toolbar>-->
				<t:columns>
					<t:Column
						sortProperty="SOURCE"
						autoResizable="true"
						filterProperty="SOURCE">
						<Label text="Source" />
						<t:template>
							<Text textAlign="Center" text="{scvExplorerModel>SOURCE}" wrapping="false" />
						</t:template>
					</t:Column>
					
					<t:Column
						sortProperty="CONTACT_NUMBER"
						autoResizable="true"
						filterProperty="CONTACT_NUMBER" >
						<Label text="Contact Number" />
						<t:template>
							<Text textAlign="Center" text="{scvExplorerModel>CONTACT_NUMBER}" wrapping="false" />
						</t:template>
					</t:Column>
					
					<t:Column
						sortProperty="CONTACT_EMAIL"
						autoResizable="true"
						filterProperty="CONTACT_EMAIL">
						<Label text="Email" />
						<t:template>
							<Text text="{scvExplorerModel>CONTACT_EMAIL}" wrapping="false" />
						</t:template>
					</t:Column>
					
					<t:Column
						sortProperty="VALID_FROM"
						autoResizable="true"
						filterProperty="VALID_FROM">
						<Label text="Valid From" />
						<t:template>
							<Text text="{path:'scvExplorerModel>VALID_FROM', formatter:'.Formatters.formatDateObjectToString'}" wrapping="false" />
						</t:template>
					</t:Column>
					
					<t:Column
						sortProperty="VALID_TO"
						autoResizable="true"
						filterProperty="VALID_TO">
						<Label text="Valid To" />
						<t:template>
							<Text text="{path:'scvExplorerModel>VALID_TO', formatter:'.Formatters.formatDateObjectToString'}" wrapping="false" />
						</t:template>
					</t:Column>
					
				</t:columns>
				
			</t:Table>

</core:FragmentDefinition>
