<core:FragmentDefinition xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
                         xmlns:core="sap.ui.core"
                         xmlns:f="sap.ui.layout.form"
                         xmlns:l="sap.ui.layout"
                         xmlns:mvc="sap.ui.core.mvc"
                         xmlns:smartTable="sap.ui.comp.smarttable"
                         xmlns="sap.m">

  <Toolbar design="Transparent"
           ariaLabelledBy="headerToolbar"
           class="osrSCVToolBar">
    <Title level="H3"
           text="{i18n>headercontent.contact}" />
    <ToolbarSpacer/>
    <Title level="H3"
           text="{i18n>headercontent.scvid}" />
  </Toolbar>


  <Title level="H3"
         text="Other Known Contact Details:"
         class="sapUiSmallMargin" />
  <smartTable:SmartTable id="history-contact"
                         entitySet=""
                         smartFilterId="smartFilterBar"
                         tableType="ResponsiveTable"
                         useExportToExcel="true"
                         beforeExport="onBeforeExport"
                         useVariantManagement="false"
                         useTablePersonalisation="true"
                         header="Line Items"
                         showRowCount="true"
                         persistencyKey="SmartTableAnalytical_Explored"
                         enableAutoBinding="true"
                         app:useSmartField="true">
    <!-- layout data used to make the table growing but the filter bar fixed -->
    <smartTable:layoutData>
      <FlexItemData growFactor="1"
                    baseSize="0%" />
    </smartTable:layoutData>
  </smartTable:SmartTable>

</core:FragmentDefinition>
