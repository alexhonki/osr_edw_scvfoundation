<core:FragmentDefinition xmlns="sap.m"
                         xmlns:core="sap.ui.core"
                         xmlns:l="sap.ui.layout"
                         xmlns:form="sap.ui.layout.form"
                         xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
                         xmlns:f="sap.ui.layout.form">
  <Dialog id="confirmation-dialog"
          title="{i18n>advancefilter.dialog.title}"
          afterClose="onDestroyDialog"
          draggable="true"
          resizable="true"
          contentWidth="40%">

    <content>
      <l:Grid class="sapUiSmallMarginTop"
              hSpacing="0.5"
              defaultSpan="L12 M12 S12">
        <l:content>

          <!-- <VBox> -->
          <f:SimpleForm id="form-display-contact"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="3"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        emptySpanL="0"
                        emptySpanM="0"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="false"
                        class="">
            <f:content>


              <Label vAlign="Middle"
                     text="Search" />
              <SearchField id="searchfield"
                           liveChange="onSearch"
                           placeholder="{i18n>searchfield}" />

              <Label vAlign="Middle"
                     text="Source ID" />
              <Input
				value=""
				description="EUR / 5 pieces"/>

              <Label vAlign="Middle"
                     text="Postcode" />
              <Input
				value=""
				description="EUR / 5 pieces"/>


              <Label vAlign="Middle"
                     text="City" />
              <Input
				value=""
				description="EUR / 5 pieces"/>
              
              <Label vAlign="Middle"
                     text="SCV ID" />
              <Input
				value=""
				description="EUR / 5 pieces"/>
              
              <Label vAlign="Middle"
                     text="Source" />
              <Select forceSelection="false"
                      selectedKey="{}"
                      items="{advanceFilterModel>Source}">
                <core:Item key="{advanceFilterModel>/code}" text="{advanceFilterModel>/name}" />
              </Select>

            </f:content>
          </f:SimpleForm>

          <!-- </VBox> -->
        </l:content>
      </l:Grid>

    </content>

    <beginButton>
      <Button id="dialog-back"
              press="onDialogCancelPressed"
              text="{i18n>dialog.back}" />
    </beginButton>
    <endButton>
      <Button id="dialog-next"
              press="onDialogNextPressed"
              text="{i18n>dialog.next}" />
    </endButton>

  </Dialog>
</core:FragmentDefinition>
